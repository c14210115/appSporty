<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment_list_coach">

    <EditText
        android:id="@+id/etFilterName"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:hint="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etFilterLocation"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:hint="Location"
        app:layout_constraintEnd_toStartOf="@+id/etFilterSportCategory"
        app:layout_constraintStart_toEndOf="@+id/etFilterName"
        app:layout_constraintTop_toTopOf="@+id/etFilterName" />

    <EditText
        android:id="@+id/etFilterSportCategory"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:hint="Category"
        app:layout_constraintEnd_toStartOf="@+id/btnApplyFilters"
        app:layout_constraintTop_toTopOf="@+id/etFilterName" />

    <ImageButton
        android:id="@+id/btnApplyFilters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/circle_bg"
        android:backgroundTint="#CDCDCD"
        android:src="@drawable/search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etFilterSportCategory" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCoachList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="13dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etFilterName" />

</androidx.constraintlayout.widget.ConstraintLayout>